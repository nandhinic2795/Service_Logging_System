<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_service_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/machser"
    tools:context="com.example.prasan.serviceloggingsystem.SearchServiceDetails">

    <Button
        android:text="Search"
        android:background="#CCBAA6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:id="@+id/btnservsearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:textSize="20sp"
        android:textColor="#FF1493"
        android:background="#FFFFFF"
        android:layout_below="@+id/btnservsearch"
        android:layout_marginTop="85dp"
        android:id="@+id/txtresultservicedetails"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:id="@+id/etsearchservicedetails"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Service Name"
        tools:ignore="HardcodedText" />
</RelativeLayout>
