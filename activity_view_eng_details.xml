<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_eng_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/searching"
    tools:context="com.example.prasan.serviceloggingsystem.ViewEngDetails">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="#0057FF"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/etViewEngID"
        android:hint="Enter Engineer ID"
        tools:ignore="HardcodedText"
        android:layout_alignRight="@+id/btnEngView"
        android:layout_alignEnd="@+id/btnEngView" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:background="#FFFFFF"
        android:id="@+id/txtvieweng"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="99dp" />

    <Button
        android:text="Search"
        android:background="@drawable/oval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEngView"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/txtvieweng"
        android:layout_marginBottom="19dp"
        android:layout_alignRight="@+id/txtvieweng"
        android:layout_alignEnd="@+id/txtvieweng"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
