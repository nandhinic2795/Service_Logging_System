<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_machine_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mach3"
    tools:context="com.example.prasan.serviceloggingsystem.AddMachineDetails">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etmachwars"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        tools:ignore="HardcodedText"
        android:hint="YYYY-MM-DD"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:text="Start Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/etmachwars"
        android:layout_alignBottom="@+id/etmachwars"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="End Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/etmachware"
        android:layout_alignBottom="@+id/etmachware"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="AMC Valid Date"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etmachware"
        android:id="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Warranty Valid Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        tools:ignore="HardcodedText"
        android:textSize="13sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_below="@+id/etmachrate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:ems="10"
        android:id="@+id/etmachamcs"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/etmachware"
        android:layout_alignStart="@+id/etmachware"
        android:hint="YYYY-MM-DD"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etmachmodel"
        tools:ignore="HardcodedText"
        android:hint="Enter Machine Model"
        android:layout_below="@+id/etmachname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etmachdate"
        tools:ignore="HardcodedText"
        android:hint="Enter Date of Purchase(YYYY-MM-DD)"
        android:layout_below="@+id/etmachmodel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/etmachrate"
        tools:ignore="HardcodedText"
        android:hint="Enter Machine Rate"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/etmachmodel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/etmachcustid"
        tools:ignore="HardcodedText"
        android:hint="Enter Customer ID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/etmachid"
        tools:ignore="HardcodedText"
        android:hint="Enter Machine ID"
        android:layout_below="@+id/etmachcustid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/etmachname"
        tools:ignore="HardcodedText"
        android:hint="Enterb Machine Name"
        android:layout_below="@+id/etmachid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etmachware"
        tools:ignore="HardcodedText"
        android:hint="YYYY-MM-DD"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/etmachwars"
        android:layout_alignStart="@+id/etmachwars" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etmachamce"
        android:hint="YYYY-MM-DD"
        tools:ignore="HardcodedText"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/etmachamcs"
        android:layout_alignStart="@+id/etmachamcs" />

    <TextView
        android:text="End Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/etmachamcs"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:text="Start Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/etmachamcs"
        android:layout_alignBottom="@+id/etmachamcs"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:text="View"
        android:textColor="#00FF00"
        android:background="@color/colorPrimaryDark"
        android:layout_width="50dp"
        android:onClick="OnClicKMachView"
        android:layout_height="25dp"
        android:id="@+id/btnmachView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/etmachamce"
        android:layout_toRightOf="@+id/button13"
        android:layout_toEndOf="@+id/button13"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Button
        android:text="View"
        android:textColor="#00FF00"
        android:background="@color/colorPrimaryDark"
        android:layout_width="50dp"
        android:onClick="OnClicKMachView"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/etmachamce"
        android:layout_toRightOf="@+id/button13"
        android:layout_toEndOf="@+id/button13"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignBottom="@+id/btnmachView" />

    <Button
        android:text="View"
        android:textColor="#00FF00"
        android:background="@color/colorPrimaryDark"
        android:layout_width="50dp"
        android:onClick="OnClicKMachView"
        android:layout_height="25dp"
        android:id="@+id/button8"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/etmachamce"
        android:layout_toRightOf="@+id/button13"
        android:layout_toEndOf="@+id/button13"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Button
        android:text="Add"
        android:textColor="#00FF00"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:id="@+id/btnadmachinedetails"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:onClick="OnClickMachIns"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/etmachamce"
        android:layout_alignRight="@+id/etmachamce"
        android:layout_alignEnd="@+id/etmachamce" />

    <Button
        android:text="Delete"
        android:textColor="#00FF00"
        android:background="@color/colorPrimaryDark"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:id="@+id/button11"
        android:onClick="OnclickDelMach"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/etmachamce"
        android:layout_toLeftOf="@+id/btnadmachinedetails"
        android:layout_toStartOf="@+id/btnadmachinedetails"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:text="Update"
        android:onClick="OnclickUpMach"
        android:textColor="#00FF00"
        android:background="@color/colorPrimaryDark"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:id="@+id/button13"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/etmachamce"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

</RelativeLayout>
